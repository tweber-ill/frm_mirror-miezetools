#!./hermelin
# Plotting

mcplot2d(file)
{
	fulldat = loadtxt(file);
	numcols = length(fulldat);

	params = map();
	if(typeof(fulldat[-1]) == "map")
	{
		params = fulldat[-1];
		numcols -= 1;
	}

	dat = fulldat[0:numcols];

	dat = trans(dat);
	numlines = length(dat)/3;
	dat = dat[0:numlines];

	plot2d(dat, params);
}


main(args)
{
	mcplot2d(args[1]);
}
